{{- if (and (ne .chezmoi.osRelease.id "arch") (ne .chezmoi.osRelease.id "endeavouros")) -}}
#!/bin/bash
cmd1="apt install terminator"
folder1="$HOME/.config/terminator"

echo "running $cmd1 w/ sudo"
sleep 1
sudo -E bash -c "$cmd1"

if [ ! -d "$folder1" ]; then
mkdir -p "$folder1"
fi

{{- else -}}
#! /bin/bash
cmd1="pacman -S --noconfirm --needed terminator"
folder1="$HOME/.config/terminator"

echo "running $cmd1 w/ sudo"
sleep 1
sudo -E bash -c "$cmd1"

if [ ! -d "$folder1" ]; then
mkdir -p "$folder1"
fi

{{- end -}}
