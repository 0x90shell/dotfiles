set mouse=a 
set tabstop=4 
set shiftwidth=4
set softtabstop=4 
set expandtab
set autoindent
set smartindent
syntax on
map <leader>at :ALEToggle<CR>
map <leader>nt :NERDTree<CR>
map <leader>ex :exit<CR>
set pastetoggle=<F3>
set clipboard=unnamedplus
{{- if (and (ne .chezmoi.osRelease.id "arch") (ne .chezmoi.osRelease.id "endeavouros")) }}
source ~/.vim/plugins/ale.vim
{{ end -}}
