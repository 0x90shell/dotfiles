{
    "apps": [
        {
            "auto-detach": true,
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "desktop.png",
            "name": "Desktop",
            "prep-cmd": [
                {
                    "do": "xdotool mousemove_relative 1 0; xdotool mousemove_relative -- -1 0",
                    "undo": ""
                }
            ],
            "wait-all": true
        },
        {
            "auto-detach": true,
            "cmd": "/home/gandalf/bin/esdepull",
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "/home/gandalf/.config/sunshine/assets/esde.png",
            "name": "ES-DE",
            "prep-cmd": [
                {
                    "do": "xdotool mousemove_relative 1 0; xdotool mousemove_relative -- -1 0",
                    "undo": ""
                }
            ],
            "wait-all": true
        },
        {
            "image-path": "desktop.png",
            "name": "Low Res Desktop",
            "prep-cmd": [
                {
                    "do": "xrandr --output HDMI-1 --mode 1920x1080",
                    "undo": "xrandr --output HDMI-1 --mode 1920x1200"
                }
            ]
        },
        {
            "auto-detach": true,
            "cmd": "perfect-dark",
            "elevated": false,
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "",
            "name": "Perfect Dark",
            "output": "",
            "prep-cmd": [
                {
                    "do": "xdotool mousemove_relative 1 0; xdotool mousemove_relative -- -1 0",
                    "undo": ""
                }
            ],
            "wait-all": true
        },
        {
            "auto-detach": true,
            "detached": [
                "setsid steam steam://open/bigpicture"
            ],
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "steam.png",
            "name": "Steam Big Picture",
            "prep-cmd": [
                {
                    "do": "xdotool mousemove_relative 1 0; xdotool mousemove_relative -- -1 0",
                    "undo": "setsid steam steam://close/bigpicture"
                }
            ],
            "wait-all": true
        }
    ],
    "env": {
        "PATH": "$(PATH):$(HOME)/.local/bin"
    }
}